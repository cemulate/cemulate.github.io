{% assign data = projects[name] %}

<div class="block">
  <nav class="level is-hidden-mobile">
    <div class="level-left">
      <div class="level-item">
        <img src="{{ data.logo }}" alt="" style="width: 3em; height: 3em">
      </div>
      <div class="level-item">
        <h1 class="title has-text-weight-bold">
          {% if data.link %}
          <a id="link-{{ name }}" href="{{ data.link }}">{{ data.name }}</a>
          {% else %}
          {{ data.name }}
          {% endif %}
        </h1>
      </div>
    </div>
    <div class="level-right is-hidden-mobile">
      {% if data.github %}
      <a class="github-link" href="{{ data.github }}">
        <svg style="width: 2.5em; height: 2.5em">
          <use href="/assets/github-brands.svg#github"></use>
        </svg>
      </a>
      {% endif %}
    </div>
  </nav>
  <hr class="is-hidden-mobile">
  <div class="columns is-mobile">
    <div class="column is-narrow is-hidden-tablet">
      <div>
        <img src="{{ data.logo }}" alt="" style="width: 2em; height: 2em">
      </div>
      {% if data.github %}
      <div class="mt-2">
        <a class="github-link" href="{{ data.github }}">
          <svg style="width: 2em; height: 2em">
            <use href="/assets/github-brands.svg#github"></use>
          </svg>
        </a>
      </div>
      {% endif %}
    </div>
    <div class="column">
      <div class="content">
        <h1 class="title is-4 is-hidden-tablet">
          {% if data.link %}
          <a id="link-{{ name }}" href="{{ data.link }}">{{ data.name }}</a>
          {% else %}
          {{ data.name }}
          {% endif %}
        </h1>
        {{ data.description | markdownify }}
      </div>
    </div>
  </div>
  <hr class="is-hidden-desktop">
</div>